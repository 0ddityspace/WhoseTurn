<!DOCTYPE html>
<html>
<head>
  <title>Administration - Gestion des utilisateurs</title>
  <link rel='stylesheet' href='/stylesheets/style.css'/>
  <link rel='stylesheet' href='/stylesheets/bootstrap.css'/>
  <link rel='stylesheet' href='/stylesheets/bootstrap-theme.css'/>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Gestion des utilisateurs</a>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="/admin">Retour à l'accueil de la partie administration</a></li>
      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </div>
  <!-- /.container-fluid -->
</nav>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Identifiant</th>
    <th>Nom</th>
    <th>Abonné ?</th>
    <th>Externe ?</th>
    <th>Avatar</th>
  </tr>
  </thead>
  <tbody>
  <% users.forEach(function(user) { %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><input type="checkbox" <%= user.hasSubscribe ? 'checked' : '' %>></td>
    <td><input type="checkbox" <%= user.isExternal ? 'checked' : '' %>></td>
    <td><%= user.avatar %></td>
  </tr>
  <% }) %>
  </tbody>
</table>